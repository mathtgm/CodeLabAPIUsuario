{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.e2e-spec.{ts,js}"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 60000,
  "coverageDirectory": "./coverage/e2e",
  "coverageReporters": [
    "text",
    "html"
  ]
}